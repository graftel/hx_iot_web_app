<%- include ../partials/header.ejs %>
<link href="dist/css/login.css" rel="stylesheet">

<body>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-title">
						<p class="panel-title-p">
							 Graftel Heat Exchange System Demo
						</p>
					</div>
					<div class="panel-heading">
							<h4 class="col-xs-12">Forgot Username</h4>
						<hr>
					</div>
					<div class="panel-body">
							<div class="col-lg-12">
								<form id="forgot-password-form" action="/forgotusername" method="post" role="form"
									style="display: block;">
									<div class="form-group">
								<div style="padding-bottom: 3px;">Enter your email id to reset your username: </div>								
										<input type="email" name="email" id="email" tabindex="1" class="form-control" value="">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" class="form-control btn btn-login"
													value="Send eMail">
											</div>
										</div>
									</div>
								</form>
							<div class="col-md-12 col-md-offset-4" ><a href="/login">Login / Register</a></div>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
	<div class="container" id="alert"></div>
	<%- include ../partials/scripts.ejs %>
</body>
