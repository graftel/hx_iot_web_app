<%- include ../partials/header.ejs %>
<link href="dist/css/login.css" rel="stylesheet">

<body>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-title">
						<p class="panel-title-p">
							 Graftel Heat Exchange System Demo
						</p>
					</div>
					<div class="panel-heading">
							<h4 class="col-xs-12">Reset Password</h4>
						<hr>
					</div>
					<div class="panel-body">
							<div class="col-lg-12">
							<form id="new-password-form" action="/newpassword" method="post" role="form"
									style="display: block;">
									<div class="form-group">
									<label> Email </label>						
										<input type="email" name="email" id="email" tabindex="1"
											class="form-control" value="<%=email%>" readonly>
									<label> Password </label>				
										<input type="password" name="password" id="password" tabindex="2"
											class="form-control" value="">
									<label> Confirm password </label>				
										<input type="password" name="confirm-password" id="confirm-password" tabindex="3"
											class="form-control" value="">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" class="form-control btn btn-login"
													value="Reset Password">
											</div>
										</div>
									</div>
								</form>
							<div class="col-md-12 col-md-offset-4" ><a href="/login">Login</a> / <a href="/register">Register</a></div>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
	<div class="container" id="alert"></div>
	<%- include ../partials/scripts.ejs %>
	<script type="text/javascript">
	$('input[type="submit"]')
	.click(
			function(e) {
				var password = $(
						"#new-password-form input#password").val();
				var confirmPassword = $(
						"#new-password-form input#confirm-password")
						.val();
				if (password == ''
						|| confirmPassword == '') {
					$("#alert")
							.html(
									'<div class="alert alert-danger">Any of the fields cannot be empty.</div>');
					return false;
				}
				if (password != confirmPassword) {
					$("#alert")
							.html(
									'<div class="alert alert-danger">Password fields do not match.</div>');
					return false;
				}
				if (password.length < 8) {
					$("#alert")
							.html(
									'<div class="alert alert-danger">Password needs to be atleast of 8 characters.</div>');
					return false;
				}
			});
	</script>
</body>
