<%- include ../partials/header.ejs %>
<link href="dist/css/login.css" rel="stylesheet">

<body style="padding-top: 5%;">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel">
					<div class="panel-title">
						<p class="panel-title-p">Graftel Heat Exchange System Demo</p>
					</div>
					<div class="panel-heading">
						<h4 class="col-xs-12 text-center">
							Registration
							<hr>
						</h4>
					</div>
					<div class="panel-body">
						<div class="col-lg-12">
							<form id="registration-form" action="/registration2" method="POST"
								role="form" style="display: block;">
								<div class="form-group">
									<div class="col-sm-9 col-sm-offset-1">
										<div class="panel">
											<label> Email </label> <input type="email" name="email"
												id="email" tabindex="1" class="form-control"
												value="<%=email%>" readonly> 
											<label> Password </label> <input type="password" name="password"
												id="password" tabindex="2" class="form-control"
												value="">
											<label>
												Verification Code </label> <input type="text" name="code" id="code"
												tabindex="3" class="form-control" value="<%=code%>" readonly>
											<label> First Name </label> <input type="text"
												name="firstName" id="firstName" tabindex="5"
												class="form-control" value=""> <label> Last
												Name </label> <input type="text" name="lastName" id="lastName"
												tabindex="5" class="form-control" value="">
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<input type="submit" class="form-control btn btn-login" value="Submit">
										</div>
									</div>
								</div>
							</form>
							<div class="col-md-12 col-md-offset-5">
								<a href="/login">Login</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container" id="alert"></div>
	<%- include ../partials/scripts.ejs %>
	
	<script type="text/javascript">
	$('input[type="submit"]')
	.click(function(e){
		var t = $('input').map(function(e,i){  
				if(i.value == "")
					return false;
				return true;
			});
		if($.inArray(false,t) == -1)
			return true;
		$("#alert").html('<div class="alert alert-danger">Fields cannot be empty.</div>');
		return false;
	});
	</script>
</body>
